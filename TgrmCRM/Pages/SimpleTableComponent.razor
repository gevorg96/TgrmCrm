
    <div class="col-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var key in Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>
                            <a @onclick="@(e => Edit(Keys.FindIndex(p => p == key)))" style="cursor:pointer" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons">edit</i></a>
                            <a @onclick="@(e => Delete(Keys.FindIndex(p => p == key)))" style="cursor:pointer" class="delete" title="" data-toggle="tooltip" data-original-title="Delete"><i class="material-icons">delete</i></a>
                        </td>
                    </tr>
                }
                @if (addMode)
                {
                    <tr>
                        <td><input type="text" class="form-control" @bind="@selectedKey" /></td>
                        <td><button type="submit" class="btn btn-primary" @onclick="AddKey">+</button></td>
                    </tr>
                }
                @if (editMode)
                {
                    <tr>
                        <td><input type="text" class="form-control" @bind="@selectedKey" /></td>
                        <td><button type="submit" class="btn btn-primary" @onclick="Update">+</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

@code {
    //[Parameter]
    //public string Header { get; set; }

    [Parameter]
    public List<string> Keys { get; set; }

    bool addMode = true;
    bool editMode = false;
    private string selectedKey = string.Empty;
    private int idx = Int32.MaxValue;

    private void AddKey()
    {
        Keys.Add(selectedKey);
        selectedKey = string.Empty;
        StateHasChanged();
    }

    private void Edit(int id)
    {
        addMode = false;
        selectedKey = Keys[id];
        idx = id;
        editMode = true;
    }

    private void Update()
    {
        Keys[idx] = selectedKey;
        idx = Int32.MaxValue;
        editMode = false;
        addMode = true;
        selectedKey = string.Empty;
        StateHasChanged();
    }

    private void Delete(int id)
    {
        Keys.RemoveAt(id);
        selectedKey = string.Empty;
        StateHasChanged();
    }
}
